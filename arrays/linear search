#include <iostream>
using namespace std;

class linear{
    public:
        int search(int arr[],int x, int n){
            for(int i=0;i<n;i++){
                if (x==arr[i]){
                    return i;
                }
            }
        }
};

int main()
{
    int arr[]={1,2,3,4,5};
    int n=sizeof(arr)/sizeof(arr[0]);
    int x=4;
    linear obj;
    cout<<obj.search(arr,x,n);
    

    return 0;
}
