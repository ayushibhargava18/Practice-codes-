input 
#include <iostream>
using namespace std;

int main(){
    cout<< "Enter a number";
    int a;
    cin >> a;
    for (int i=1;i<=10;i++){
        int mul= a*i;
        cout <<" \n"<< a << " * " << i << "=" << mul;
    }
    return 0;
}

Output 

Enter a number 5
 
5 * 1=5 
5 * 2=10 
5 * 3=15 
5 * 4=20 
5 * 5=25 
5 * 6=30 
5 * 7=35 
5 * 8=40 
5 * 9=45 
5 * 10=50

