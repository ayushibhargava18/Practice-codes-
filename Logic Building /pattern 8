#include <iostream>
using namespace std;

class patterns{
    public:
    int num=1;
    void pattern(int x){
        for(int i=1; i<=x;i++){
            for(int j=1; j<=i;j++){
                cout<<" "<<num;
                num++;
            }
        cout<<"\n";
        }
    }
    
};

int main(){
    patterns obj;
    obj.pattern(5);
}


